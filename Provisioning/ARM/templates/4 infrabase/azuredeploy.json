        },
        "customer": {
            "type": "string",
            "defaultValue": "yec",
            "metadata": {
                "description": "Location for the resourceGroup"
            }
        },
        "environment": {
            "type": "array",
            "defaultValue": "prd01"
        }
    },
    "variables": {
        "location": "[parameters('location')]",
        "arrayUnion": "[union(parameters('appNames'),parameters('environment'))]",
        "rgprefix": "arsgr",
        "rgNameArray": {

        },
        "copy": [
            {
                "name": "rgName0",
                "count": "[length(parameters('appNames'))]",
                "input": "[toLower(concat(variables('rgprefix'),parameters('customer'),parameters('appNames')[copyIndex('rgName0')],parameters('location'),parameters('environment')[0]))]"


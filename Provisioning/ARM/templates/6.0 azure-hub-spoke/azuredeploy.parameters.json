    "spokeNetworkTwo": {
      "value": {
        "name": "vnet-spoke-two",
        "addressPrefix": "10.200.0.0/16",
        "subnetName": "snet-spoke-resources",
        "subnetPrefix": "10.200.0.0/16",
        "subnetNsgName": "nsg-spoke-two-resources"
      }
    },
    "spokeNetworkThree": {
      "value": {
        "name": "vnet-spoke-three",
        "addressPrefix": "10.300.0.0/16",
        "subnetName": "snet-spoke-resources",
        "subnetPrefix": "10.300.0.0/16",
        "subnetNsgName": "nsg-spoke-two-resources"
      }

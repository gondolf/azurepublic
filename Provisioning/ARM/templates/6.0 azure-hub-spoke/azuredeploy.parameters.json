{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "layers": {
      "value": [
        "web",
        "dat",
        "app"
      ]
    },
    "customer": {
      "value": "gee"
    },
    "adminUserName": {
      "value": "azureuser"
    },
    "adminPassword": {
      "value": "Password1234$"
    },
    "windowsVMCount": {
      "value": 0
    },
    "linuxVMCount": {
      "value": 0
